              addMessagesNextToInputFieldStyled(ssignInputFieldIDs[j], message, inputFieldGroups[i].customErrorMessageStyle);
            }
            else {
              addMessagesNextToInputField(ssignInputFieldIDs[j], message);
            }
          }
